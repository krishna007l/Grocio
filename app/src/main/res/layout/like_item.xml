<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCartItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_8">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageItem"
        android:layout_width="@dimen/default_image_size_74dp"
        android:layout_height="@dimen/default_image_size_74dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/color_white"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/nameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageItem"
        app:layout_constraintEnd_toStartOf="@+id/textItemPrice"
        app:layout_constraintStart_toEndOf="@+id/imageItem"
        app:layout_constraintTop_toTopOf="@+id/imageItem">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textItemName"
            style="@style/CustomHeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Item Name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textItemDescription"
            style="@style/CustomDescriptionTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Item Name" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textItemPrice"
        style="@style/CustomHeaderTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:drawablePadding="@dimen/padding_12"
        android:maxLines="1"
        android:ellipsize="end"
        android:ems="4"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/imageItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageItem"
        tools:text="2000" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_8"
        android:background="@color/color_light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageItem" />
</androidx.constraintlayout.widget.ConstraintLayout>