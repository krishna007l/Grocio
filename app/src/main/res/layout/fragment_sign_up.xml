<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/sine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:maxLines="2"
        android:text="@string/str_signin"
        android:fontFamily="@font/gentiumbookplus_bold"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/font_36"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textsigninusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:maxLines="2"
        android:textColor="@color/black"
        android:text="@string/str_username"
        android:fontFamily="@font/gentiumbookplus_regular"
        android:layout_marginLeft="35dp"
        android:textSize="@dimen/font_24"
        app:layout_constraintTop_toBottomOf="@+id/textTitleSignin" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editusername"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textsigninusername" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitleEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_8"
        android:maxLines="2"
        android:textColor="@color/black"
        android:text="@string/str_email"
        android:fontFamily="@font/gentiumbookplus_regular"
        android:textAlignment="textStart"
        android:layout_marginLeft="35dp"
        android:textSize="@dimen/font_24"
        app:layout_constraintTop_toBottomOf="@+id/editusername" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextEmail"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textTitleEmail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTitlePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_8"
        android:maxLines="2"
        android:textColor="@color/black"
        android:text="@string/str_password"
        android:fontFamily="@font/gentiumbookplus_regular"
        android:textAlignment="textStart"
        android:layout_marginLeft="35dp"
        android:textSize="@dimen/font_24"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextPassword"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textTitlePassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SinupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_92"
        android:background="@drawable/curve"
        android:text="@string/str_signin"
        android:fontFamily="@font/gentiumbookplus_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/card_radius_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eye_24"
        app:layout_constraintBottom_toBottomOf="@id/editTextPassword"
        app:layout_constraintEnd_toEndOf="@id/editTextPassword"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="300dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="already creat account"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SinupButton">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_login"
        android:textColor="@color/blue"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toEndOf="@id/slogan"
        app:layout_constraintTop_toTopOf="@id/slogan"
        android:onClick="onMButtonClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>